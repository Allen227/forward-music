.app-footer {
  position: relative;
  height: 54px;
  border-top: 1px solid var(--borderColor);
  .footer-bg {
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--mainFgColor);
  }
  .footer-container {
    display: flex;
    align-items: center;
    padding: 0 24px;
    height: inherit;
    .player-control {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 120px;
      .play-btn {
        position: relative;
        width: 32px;
        height: 32px;
        border: 2px solid black;
        border-radius: 100%;
        display: flex;
        align-items: center;
        .play-icon {
          position: relative;
          width: 2px;
          height: 20px;
          background: black;
          margin-left: 12px;
          &::before, &::after {
            content: " ";
            position: absolute;
            width: inherit;
            height: 15px;
            background: inherit;
            transition: all 0.15s ease;
          }
          &::before {
            top: 0px;
            left: 6px;
            transform: rotate(-45deg);
          }
          &::after {
            top: 4px;
            left: 6px;
            transform: rotate(50deg);
          }
        }
        .play-icon.active {
          &::before, &::after {
            transform: rotate(0deg);
          }
        }
      }
    }
  }
}