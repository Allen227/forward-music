.left-side {
  flex: 0 0 280px;
  height: calc(100vh - 100px);
  background: var(--mainFgColor);
  border-right: 1px solid var(--borderColor);
  .title {
    font-size: 14px;
    height: 50px;
    line-height: 50px;
    padding-left: 12px;
    box-shadow: 0 2px 3px var(--lightGrayColor);
  }
  .track-container {
    height: calc(100% - 50px);
    .track-list {
      margin-top: 6px;
      cursor: pointer;
      height: 100%;
      padding: 0 12px;
      .list-item {
        height: 30px;
        line-height: 30px;
        padding-left: 10px;
        font-size: var(--fontSmallSize);
        color: #555;
        border-bottom: 1px dashed black;
        display: flex;
        justify-content: space-between;
        padding: 0 24px;
        .song-name {
          overflow: hidden;
        }
        &:hover {
          background: var(--hoverBgColor);
        }
      }
    }
  }
}