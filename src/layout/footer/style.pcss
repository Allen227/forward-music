.app-header {
  position: relative;
  &__bg {
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--mainColor);
  }
  &__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--headerMaxWidth);
    min-width: var(--headerMinWidth);
    padding: 0 24px;
    height: 45px;
    line-height: 45px;
    margin: 0 auto;
    color: var(--mainFontColor);
  }
}