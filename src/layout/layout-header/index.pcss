.app-header {
  position: relative;
  &__bg {
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--mainColor);
  }
  &__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--headerMaxWidth);
    min-width: var(--headerMinWidth);
    padding: 0 24px;
    height: 60px;
    line-height: 60px;
    margin: 0 auto;
    color: var(--mainFontColor);
    .app-title {
      cursor: pointer;
      font-size: 18px;
    }
    .menu-list {
      display: flex;
      justify-content: space-between;
      list-style: none;
      cursor: pointer;
      &__item {
        padding: 0 24px;
        margin-right: 12px;
        text-decoration: none;
        color: var(--mainFontColor);
        &:hover {
          color: #00BFFF;
        }
        &--active {
          background: #00BFFF;
          color: white;
          &:hover {
            color: white;
          }
        }
      }
    }
  }
}