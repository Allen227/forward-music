.ant-carousel .slick-slide {
  width: 100%;
  height: 300px;
}
.recommend {
  .tags-list {
    padding: 12px 0;
    display: flex;
    justify-content: space-around;
    cursor: pointer;
    border-bottom: 1px solid var(--borderColor);
    .tag {
      &:hover {
        color: var(--mainColor);
      }
      &.active {
        color:var(--mainColor);
      }
    }
  }
}